<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC 
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.chengxusheji.domain">

	<class name="Course" table="Course">

          <!-- 主键课程编号 -->
          <id name="courseNo" type="string" length="20">
            <generator class="assigned"/>
          </id>

          <!-- 多对一属性: 所属班级 -->
          <many-to-one name="classObj"
            column="classObj"
            class="ClassInfo"
            lazy="false"
            outer-join="true"
            cascade="save-update"
          />

          <!-- 简单字符串属性: 课程名称 -->
          <property
            name="courseName"
            column="courseName"
            type="string"
            length="20"
          />

          <!-- 简单整型属性: 课程总学时 -->
          <property
            name="courseHours"
            column="courseHours"
            type="int"

          />

          <!-- 简单浮点型属性: 课程学分 -->
          <property
            name="courseScore"
            column="courseScore"
            type="float"
          />

          <!-- 多对一属性: 上课老师 -->
          <many-to-one name="teacherObj"
            column="teacherObj"
            class="Teacher"
            lazy="false"
            outer-join="true"
            cascade="save-update"
          />

          <!-- 简单字符串属性: 课程描述 -->
          <property
            name="courseDesc"
            column="courseDesc"
            type="string"
            length="2000"
          />


		 
		
	</class>
	
</hibernate-mapping>
 
